<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_10sdp"
    tools:context=".otpReader.OtpReader">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin1"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin2"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pin1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin3"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pin2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin4"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pin3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin5"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pin4"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/pin6"
        style="@style/pinStyle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:background="@drawable/otp_border_black"
        android:hint="@string/dummy_char"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pin5"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>