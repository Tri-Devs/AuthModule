<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_10sdp"
    tools:context=".screens.login.LoginFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHelloAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:textColor="@color/yellow_orange"
                android:layout_marginTop="@dimen/_25sdp"
                android:textSize="@dimen/_25ssp"
                app:fontFamily="@font/poppins_semi_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fill_your_information"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_30sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_11ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHelloAgain" />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toTopOf="@+id/etlEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubText" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etlEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                app:boxStrokeColor="@color/yellow_orange"
                app:errorContentDescription="@string/app_name"
                app:errorEnabled="true"
                app:errorTextColor="@android:color/holo_red_dark"
                app:hintEnabled="false"
                app:layout_constraintBottom_toTopOf="@+id/tvPasswordLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_email"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="30"
                    android:saveEnabled="false"
                    android:singleLine="true"
                    android:textSize="@dimen/_11ssp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPasswordLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toTopOf="@+id/etlPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etlEmail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etlPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                app:boxStrokeColor="@color/yellow_orange"
                app:endIconCheckable="true"
                app:endIconMode="password_toggle"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPasswordLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:saveEnabled="false"
                    android:singleLine="true"
                    android:textSize="@dimen/_9ssp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/rememberMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remember_password"
                android:textColor="@color/black"
                android:shadowColor="@color/yellow_orange"
                android:textAlignment="center"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etlPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_30sdp"
            android:backgroundTint="@color/yellow_orange"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="@dimen/_10sdp"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:text="@string/signUp"
            android:textSize="@dimen/_11ssp"
            app:cornerRadius="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clLogin" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trackColor="@color/black"
            app:trackThickness="8dp"
            android:elevation="@dimen/_5sdp"
            app:indicatorColor="@color/white"
            app:indicatorDirectionCircular="clockwise"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorSize="@dimen/_20sdp"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintTop_toTopOf="@id/btnSignUp"
            app:layout_constraintBottom_toBottomOf="@id/btnSignUp"
            app:layout_constraintStart_toStartOf="@id/btnSignUp"
            app:layout_constraintEnd_toEndOf="@id/btnSignUp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signUpNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_15sdp"
            android:text="@string/have_an_accoun"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/_11ssp"
            app:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInOptions" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signUpDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signUp_with"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/_11ssp"
            app:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSignUp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="@dimen/_80sdp"
            android:layout_height="1dp"
            app:dividerColor="@color/yellow_orange"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/signUpDivider"
            app:layout_constraintBottom_toBottomOf="@id/signUpDivider"
            app:layout_constraintEnd_toStartOf="@id/signUpDivider"/>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="@dimen/_80sdp"
            android:layout_height="1dp"
            app:dividerColor="@color/yellow_orange"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/signUpDivider"
            app:layout_constraintBottom_toBottomOf="@id/signUpDivider"
            app:layout_constraintStart_toEndOf="@id/signUpDivider"/>
        <RadioGroup
            android:id="@+id/signInOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpDivider">

            <RadioGroup
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/box_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnBioMetric"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOrContinueWith">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:contentDescription="@string/biometric_button"
                    android:src="@drawable/ic_google" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/btnMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/box_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnBioMetric"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOrContinueWith">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:contentDescription="@string/biometric_button"
                    android:src="@drawable/ic_mobile_icon" />
            </RadioGroup>
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>